<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/meeting_room_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_margin="1dp"
        android:src="@drawable/ic_icons_konqueror"
        android:contentDescription="@string/spinner_meeting_icon" />

    <TextView
        android:id="@+id/meeting_room_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/meeting_room_icon"
        android:gravity="center_vertical"
        android:textSize="@dimen/room_text_size_spinner"
        android:text="@string/spinner_meeting_room" />


</RelativeLayout>