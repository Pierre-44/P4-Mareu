<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/meeting_room_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="2dp"
        android:layout_margin="2dp"
        android:src="@drawable/ic_icons_konqueror" />

    <TextView
        android:id="@+id/meeting_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/meeting_room_icon"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_spinner"
        android:text="Konkqueror" />


</RelativeLayout>